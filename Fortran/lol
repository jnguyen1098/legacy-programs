      subroutine expand(a,b,l)
      implicit integer (a-z)
      dimension a(0:*),b(0:*)
      do 100 i=0,l-1,1
      v=b(i)
      do 200 j=0,3,1
      a((3-j)+i*4)=mod(v,2)
      v=v/2
200   continue
100   continue
      return
      end

      subroutine compress(a,b,l)
      implicit integer (a-z)
      dimension a(0:*),b(0:*)
      do 100 i=0,l-1,1
      v=0
      do 200 j=0,3,1
      v=v*2+mod(a(j+i*4),2)
200   continue
      b(i)=v
100   continue
      return
      end
